@model SetorViewModel

<div class="row">
    <div class="col-md-12 form-group">
        <h2>Inserir um novo Setor</h2>
    </div>
</div>

<form asp-action="Create" asp-controller="Setor" asp-antiforgery="true" method="post">

    <vc:botao-default controller-name="Setor" tipo-tela="Criar"></vc:botao-default>
    <vc:summary />

    <div class="row">
        <div class="col-md-6 form-group">
            <label asp-for="Nome"></label>
            <input class="form-control" asp-for="Nome" type="text" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label asp-for="Sigla"></label>
            <input class="form-control" asp-for="Sigla" type="text" />
            <span asp-validation-for="Sigla" class="text-danger"></span>
        </div>
    </div>
    
</form>

